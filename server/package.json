{
	"name": "suriel-server",
	"private": true,
	"type": "module",
	"main": "dist/server.js",
	"scripts": {
		"build": "npx tsc --project tsconfig.build.json && tsc-alias",
		"start": "node --no-warnings --experimental-specifier-resolution=node dist/server.js",
		"start:dev": "tsc-watch --project tsconfig.build.json --onSuccess \"tsc-alias && npm run start\"",
		"test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
		"umzug": "ts-node -r dotenv/config src/services/umzug.ts",
		"migrate": "npm run umzug up",
		"migrate:reset": "npm run umzug down"
	},
	"dependencies": {
		"@faker-js/faker": "^8.0.2",
		"@jest/globals": "^29.6.4",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.17",
		"@types/factory-girl": "^5.0.8",
		"@types/node": "^20.5.9",
		"@types/supertest": "^2.0.12",
		"bcrypt": "^5.1.1",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-async-handler": "^1.2.0",
		"factory-girl": "^5.0.4",
		"glob": "^10.3.4",
		"jest": "^29.6.4",
		"mysql2": "^3.6.0",
		"sequelize": "^6.32.1",
		"sequelize-typescript": "^2.1.5",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.7",
		"tsc-watch": "^6.0.4",
		"typescript": "^5.2.2",
		"umzug": "^3.3.1",
		"zod": "^3.22.2"
	}
}
