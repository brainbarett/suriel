{
	"name": "suriel-server",
	"private": true,
	"type": "module",
	"main": "dist/server.js",
	"scripts": {
		"build": "npx tsc --project tsconfig.build.json && tsc-alias",
		"start": "node --no-warnings --experimental-specifier-resolution=node dist/server.js",
		"start:dev": "tsc-watch --project tsconfig.build.json --onSuccess \"tsc-alias && npm run start\"",
		"test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
	},
	"dependencies": {
		"@faker-js/faker": "^8.0.2",
		"@jest/globals": "^29.6.4",
		"@types/express": "^4.17.17",
		"@types/node": "^20.5.9",
		"@types/supertest": "^2.0.12",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"jest": "^29.6.4",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.7",
		"tsc-watch": "^6.0.4",
		"typescript": "^5.2.2"
	}
}
