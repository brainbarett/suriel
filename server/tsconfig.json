{
	"compilerOptions": {
		"strict": true,
		"module": "es2022",
		"target": "ES6",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"@/*": ["src/*"]
		}
	},

	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},

	"include": [".//**/*"],

	"exclude": ["node_modules", "dist"]
}
