{
	"compilerOptions": {
		"strict": true,
		"module": "ES2022",
		"target": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"@/*": ["src/*"]
		}
	},

	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},

	"include": [".//**/*"],

	"exclude": ["node_modules", "dist"]
}
